<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.christopher_santana.cs457bookstore.MainMenu">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="30dp"
            android:paddingRight="40dp"
            android:paddingLeft="40dp"
            android:paddingTop="40dp"
            android:text="Welcome to Mr. Santana's Book Emporeum!"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="20dp"
            android:gravity="center">
            <EditText
                android:id="@+id/main_query_bar"
                android:layout_width="240dp"
                android:layout_height="40dp"
                android:layout_marginLeft="40dp"
                android:hint="Search bookstore..."/>
            <ImageButton
                android:id="@+id/main_search_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:onClick="onClick"
                android:src="@android:drawable/ic_menu_search"/>
        </LinearLayout>
        <Button
            android:id="@+id/account_button"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="View Account"
            android:onClick="onClick"/>
        <Button
            android:id="@+id/sign_out_button"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Sign Out"
            android:onClick="onClick"/>
    </LinearLayout>

</RelativeLayout>
